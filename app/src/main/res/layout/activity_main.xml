<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#83566C">

    <Button
        android:id="@+id/btn_num2"
        style="@style/NumButtonStyle"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:onClick="presionarDigito"
        android:text="2"
        android:textSize="34sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_num1"
        app:layout_constraintEnd_toStartOf="@+id/btn_num3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_num1" />

    <Button
        android:id="@+id/btn_result"
        style="@style/OpsButtonStyle"
        android:backgroundTint="#086D10"
        android:layout_width="165dp"
        android:layout_height="68dp"
        android:layout_marginEnd="28dp"
        android:onClick="clicOperacion"
        android:text="="
        android:textSize="34sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_num0"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_decimal"
        style="@style/NumButtonStyle"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginTop="24dp"
        android:onClick="presionarDigito"
        android:text="."
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_num0"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_num1" />

    <Button
        android:id="@+id/btn_num0"
        style="@style/NumButtonStyle"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:onClick="presionarDigito"
        android:text="0"
        android:textSize="34sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_decimal"
        app:layout_constraintEnd_toStartOf="@+id/btn_result"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_decimal" />

    <Button
        android:id="@+id/btn_num3"
        style="@style/NumButtonStyle"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:onClick="presionarDigito"
        android:text="3"
        android:textSize="34sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_num2"
        app:layout_constraintEnd_toStartOf="@+id/btn_suma"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_num2" />

    <Button
        android:id="@+id/btn_mult"
        style="@style/OpsButtonStyle"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:onClick="clicOperacion"
        android:text="x"
        android:textSize="34sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_num9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_num9" />

    <Button
        android:id="@+id/btn_num4"
        style="@style/NumButtonStyle"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginTop="24dp"
        android:onClick="presionarDigito"
        android:text="4"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_num5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_num7" />

    <Button
        android:id="@+id/btn_num7"
        style="@style/NumButtonStyle"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginTop="24dp"
        android:onClick="presionarDigito"
        android:text="7"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_num8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_clear" />

    <Button
        android:id="@+id/btn_num8"
        style="@style/NumButtonStyle"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:onClick="presionarDigito"
        android:text="8"
        android:textSize="34sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_num7"
        app:layout_constraintEnd_toStartOf="@+id/btn_num9"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_num7" />

    <Button
        android:id="@+id/btn_num1"
        style="@style/NumButtonStyle"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginTop="24dp"
        android:onClick="presionarDigito"
        android:text="1"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_num2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_num4" />

    <Button
        android:id="@+id/btn_num6"
        style="@style/NumButtonStyle"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:onClick="presionarDigito"
        android:text="6"
        android:textSize="34sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_num5"
        app:layout_constraintEnd_toStartOf="@+id/btn_resta"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_num5" />

    <Button
        android:id="@+id/btn_resta"
        style="@style/OpsButtonStyle"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:onClick="clicOperacion"
        android:text="-"
        android:textSize="34sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_num6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_num6" />

    <Button
        android:id="@+id/btn_num5"
        style="@style/NumButtonStyle"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:onClick="presionarDigito"
        android:text="5"
        android:textSize="34sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_num4"
        app:layout_constraintEnd_toStartOf="@+id/btn_num6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_num4" />

    <Button
        android:id="@+id/btn_borrar"
        style="@style/OpsButtonStyle"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:text="C"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_div100"
        app:layout_constraintEnd_toStartOf="@+id/btn_div100"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_clear" />

    <Button
        android:id="@+id/btn_div"
        style="@style/OpsButtonStyle"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:onClick="clicOperacion"
        android:text="รท"
        android:textSize="34sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_div100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_div100" />

    <!-- style="@style/NumericButtonStyle" -->
    <Button
        android:id="@+id/btn_clear"
        style="@style/OpsButtonStyle"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginTop="60dp"
        android:backgroundTintMode="add"
        android:singleLine="true"
        android:text="AC"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_borrar"
        app:layout_constraintEnd_toStartOf="@+id/btn_borrar"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_num2"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_div100"
        style="@style/OpsButtonStyle"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:text="%"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_div"
        app:layout_constraintEnd_toStartOf="@+id/btn_div"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_borrar" />

    <Button
        android:id="@+id/btn_suma"
        style="@style/OpsButtonStyle"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:onClick="clicOperacion"
        android:text="+"
        android:textSize="34sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_num3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_num3" />

    <Button
        android:id="@+id/btn_num9"
        style="@style/NumButtonStyle"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:onClick="presionarDigito"
        android:text="9"
        android:textSize="34sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_num8"
        app:layout_constraintEnd_toStartOf="@+id/btn_mult"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_num8" />

    <TextView
        android:id="@+id/tv_num1"
        style="@style/CustomTextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="16dp"
        android:hint="0.0"
        android:textAlignment="textEnd"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_num2"
        style="@style/CustomTextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:hint="0.0"
        android:textAlignment="textEnd"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_num1" />

</androidx.constraintlayout.widget.ConstraintLayout>